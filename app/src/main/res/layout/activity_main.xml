<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/goodby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good bye"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_gravity="fill"
            android:onClick="buttonTapped"
            app:layout_row="0" />

        <Button
            android:id="@+id/howareyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are you ?"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_gravity="fill"
            android:onClick="buttonTapped"
            app:layout_row="0" />

        <Button
            android:id="@+id/iamfine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i am fine"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_gravity="fill"
            android:onClick="buttonTapped"
            app:layout_row="1" />
        <Button
            android:id="@+id/ihateyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i hate you"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_gravity="fill"
            android:onClick="buttonTapped"
            app:layout_row="1" />

        <Button
            android:id="@+id/iloveyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i love you"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_gravity="fill"
            android:onClick="buttonTapped"
            app:layout_row="2" />
        <Button
            android:id="@+id/mynameis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="my name is.."
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_gravity="fill"
            android:onClick="buttonTapped"
            app:layout_row="2" />

        <Button
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_gravity="fill"
            android:onClick="buttonTapped"
            app:layout_row="3" />
        <Button
            android:id="@+id/nicetomeetyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nice to &#10;meet you"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_gravity="fill"
            android:onClick="buttonTapped"
            app:layout_row="3" />

    </androidx.gridlayout.widget.GridLayout>
</RelativeLayout>

